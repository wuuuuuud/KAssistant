<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KAssistant.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="KAssistant.Views.MetadataViewerWindow"
        x:DataType="vm:MetadataViewerViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Series Metadata Viewer"
        Width="800" Height="600"
        MinWidth="600" MinHeight="400">

    <Design.DataContext>
        <vm:MetadataViewerViewModel/>
    </Design.DataContext>

    <Grid Margin="15" RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding SeriesName}"
                           FontSize="24"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding OriginalName}"
                           FontSize="14"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"
                           IsVisible="{Binding HasOriginalName}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Spacing="5" VerticalAlignment="Top">
                <Button Content="?? Refresh"
                        Command="{Binding RefreshMetadataCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Padding="10,6"
                        FontSize="12"/>
                <Button Content="?? Edit"
                        Command="{Binding EditMetadataCommand}"
                        IsEnabled="{Binding !IsLoading}"
                        Padding="10,6"
                        FontSize="12"
                        ToolTip.Tip="Edit metadata (coming soon)"/>
            </StackPanel>
        </Grid>

        <!-- Basic Info Cards -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,15">
            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12"
                    Margin="0,0,10,10"
                    MinWidth="120">
                <StackPanel>
                    <TextBlock Text="Series ID" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding SeriesId}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12"
                    Margin="0,0,10,10"
                    MinWidth="120">
                <StackPanel>
                    <TextBlock Text="Library ID" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding LibraryId}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12"
                    Margin="0,0,10,10"
                    MinWidth="120">
                <StackPanel>
                    <TextBlock Text="Pages Read" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding PagesRead}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12"
                    Margin="0,0,10,10"
                    MinWidth="120"
                    IsVisible="{Binding HasAgeRating}">
                <StackPanel>
                    <TextBlock Text="Age Rating" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding AgeRating}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12"
                    Margin="0,0,10,10"
                    MinWidth="120"
                    IsVisible="{Binding HasPublicationStatus}">
                <StackPanel>
                    <TextBlock Text="Status" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding PublicationStatus}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="12"
                    Margin="0,0,10,10"
                    MinWidth="120"
                    IsVisible="{Binding HasLanguage}">
                <StackPanel>
                    <TextBlock Text="Language" FontSize="11" Foreground="Gray"/>
                    <TextBlock Text="{Binding Language}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                <!-- Loading Indicator -->
                <Border Background="LightYellow"
                        BorderBrush="Orange"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        IsVisible="{Binding IsLoading}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="?" FontSize="18"/>
                        <TextBlock Text="Loading metadata..." FontSize="14" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Background="LightPink"
                        BorderBrush="Red"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        IsVisible="{Binding HasError}">
                    <StackPanel Spacing="5">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="?" FontSize="18"/>
                            <TextBlock Text="Error Loading Metadata" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Margin="28,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Summary Section -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        IsVisible="{Binding HasSummary}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="?? Summary" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Summary}"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   LineHeight="20"/>
                    </StackPanel>
                </Border>

                <!-- Genres Section -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        IsVisible="{Binding HasGenres}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="?? Genres" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <WrapPanel>
                            <ItemsControl ItemsSource="{Binding Genres}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#E3F2FD"
                                                BorderBrush="#2196F3"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                Padding="10,5"
                                                Margin="0,0,8,8">
                                            <TextBlock Text="{Binding}" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Tags Section -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        IsVisible="{Binding HasTags}">
                    <StackPanel Spacing="10">
                        <TextBlock Text="??? Tags" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <WrapPanel>
                            <ItemsControl ItemsSource="{Binding Tags}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF3E0"
                                                BorderBrush="#FF9800"
                                                BorderThickness="1"
                                                CornerRadius="12"
                                                Padding="10,5"
                                                Margin="0,0,8,8">
                                            <TextBlock Text="{Binding}" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Additional Info Section -->
                <Border BorderBrush="Gray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="?? Additional Information" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto">
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Created:" 
                                       FontSize="12" 
                                       Foreground="Gray"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Created}" 
                                       FontSize="12"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Last Modified:" 
                                       FontSize="12" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding LastModified}" 
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Cover Locked:" 
                                       FontSize="12" 
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding CoverImageLocked}" 
                                       FontSize="12"
                                       Margin="0,5,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="3"
                Background="LightGray"
                Padding="10"
                CornerRadius="3"
                Margin="0,15,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontSize="11"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="Close"
                        Command="{Binding CloseWindowCommand}"
                        Padding="15,6"
                        FontSize="12"/>
            </Grid>
        </Border>
    </Grid>

</Window>
